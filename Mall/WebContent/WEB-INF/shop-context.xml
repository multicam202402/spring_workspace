	<context:component-scan base-package="com.sds.mall.client.controller"/>
	<mvc:annotation-driven/>
	<mvc:resources location="/resources/" mapping="/static/**"/>
	
								
	<!-- 쇼핑몰의 하위 컨트롤러들이 동작할때, 관여시킬 aop 설정 -->
	
